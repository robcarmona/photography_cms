<% @page_title = "Delete Admin User: #{@private_picture.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="picture delete">
  <h2>Delete Private Picture</h2>
  
  <%= form_for(:public_picture, :url => {:action => 'destroy', :id => @private_picture.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this private picture?</p>
  
    <p class="reference-name"><%= @private_picture.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Private Picture") %>
    </div>
    
  <% end %>
</div>