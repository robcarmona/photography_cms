<% @page_title = "Edit Admin User: #{@private_picture.name}" -%>

<%= link_to("<< Back to List", {:action => "list_private_pictures", :private_user_id => params[:private_user_id]}, :class => 'back-link') %>

<div class="user edit">
  <h2>Edit Private Picture</h2>

  <%= form_for(:private_picture, :url => {:action => 'update_private_picture', :id => @private_picture.id, :private_user_id =>@private_user.id}) do |f| %>
    <%= image_tag("#{@private_picture.location}", :size => "310x310", :class => "edit_picture")%>
	<br>
  	<%= render(:partial => 'form_private', :locals => {:f => f} ) %>
	
  	<div class="form-buttons">
  	  <%= submit_tag('Update Public Picture') %>
    </div>
  <% end %>
</div>
